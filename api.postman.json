							"    pm.expect(jsonData.data).to.have.property('id');",
							"});",
							"",
							"// Save created ID for other requests",
							"var jsonData = pm.response.json();",
							"if (jsonData.data && jsonData.data.id) {",
							"    pm.collectionVariables.set(\"created_id\", jsonData.data.id);",
							"}"
